# E2E Test Environment Configuration
# This file is used ONLY for E2E tests to prevent polluting the dev database

# Test Database - completely separate from development
DATABASE_URL=sqlite:///./data/e2e_test_transcriptions.db

# Audio Storage - separate directory for test files
AUDIO_STORAGE_PATH=./data/e2e_test_audio

# Use transcription stub for faster tests (no actual Whisper processing)
E2E_TRANSCRIPTION_STUB=true

# Debug mode for better error messages
DEBUG=true

# LLM Configuration (use lightweight models for testing)
OLLAMA_MODEL=llama3.2:1b
DEFAULT_LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://ollama:11434
