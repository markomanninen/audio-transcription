# Application
DEBUG=True

# Database
DATABASE_URL=sqlite:///./data/transcriptions.db

# Storage
AUDIO_STORAGE_PATH=./data/audio
MAX_UPLOAD_SIZE=524288000

# Whisper
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu
WHISPER_STRICT_MEMORY=false

# LLM Services
# Ollama (Local - Default)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:1b
# Available models: llama3.2:1b, llama3.2:3b, llama3.1:8b, mistral:7b, phi3:mini, gemma2:2b
# Pull with: docker-compose exec ollama ollama pull <model>

# OpenRouter (Cloud - Optional)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3-haiku
# Get API key from: https://openrouter.ai/keys
# Available models: anthropic/claude-3-haiku, openai/gpt-4o-mini, google/gemini-pro, etc.
# See all models: https://openrouter.ai/models

# Default Provider Selection
DEFAULT_LLM_PROVIDER=ollama

# Redis
REDIS_URL=redis://redis:6379/0

# Security (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=development-secret-change-in-production

# External Services
HUGGINGFACE_HUB_TOKEN=

# CORS
CORS_ORIGINS=http://localhost,http://127.0.0.1,https://localhost,http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175
