# External Ollama Service Configuration Example
# Copy this to .env and modify for your external Ollama setup

# Database & Core Settings
DATABASE_URL=sqlite:///./data/transcriptions.db
REDIS_URL=redis://redis:6379/0

# External Ollama Configuration
OLLAMA_EXTERNAL=true
OLLAMA_BASE_URL=https://your-ollama-service.com
OLLAMA_MODEL=llama3.2:1b
OLLAMA_TIMEOUT=60
OLLAMA_API_KEY=your-bearer-token-here
OLLAMA_VERIFY_SSL=true

# Default LLM Provider
DEFAULT_LLM_PROVIDER=ollama

# Optional: OpenRouter as fallback
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_MODEL=anthropic/claude-3-haiku

# Whisper Configuration
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu

# Security
JWT_SECRET_KEY=your-production-secret-here

# CORS (adjust for your frontend URL)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://your-domain.com"]

# Debug
DEBUG=false